  "event": [
    {
      "listen": "test",
      "script": {
        "exec": [
          "if (pm.request.url.path.includes('login')) {",
          "  var jsonData = pm.response.json();",
          "  if (jsonData.token) {",
          "    pm.environment.set('token', jsonData.token);",
          "    console.log('✅ Token sauvegardé !');",
